{
  // Required
  "manifest_version": 2,
  "name": "Class Dojo Plus",
  "version": "0.2",

  // Recommended
  //"default_locale": "en",
  "description": "Useful hacks to the already excellent Class Dojo. Allows for class arrangements (saved per computer), hotkeys for students/behaviors, quick points via mouse wheel, and more!",
  "icons": {"16": "icon16.png",
  "32": "icon32.png",
  "48": "icon48.png",
  "128": "icon128.png" },

  // Pick one (or none)
